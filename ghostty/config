# 背景を少し透明にする
background-opacity = 0.9

# テーマを指定する
theme = Monokai Classic

# フォントを指定する
font-family = ""
font-family = "Menlo"
font-family = "Hiragino Sans W4"

# フォントサイズを指定する
font-size = 11

# タイピング中にマウスカーソルを非表示にする
mouse-hide-while-typing

# 合字機能を無効化する
font-feature = -calt,-liga,-dlig

# OptionをAltではなくOptionとして扱う
macos-option-as-alt = false

# vim:ft=conf: